<%= div_for link do %>
  <% if link.image %>
  	<li><%=h link_to image_tag(link.image.url(:med), :alt => link.text, :class => 'link_image'), link.url %>
  <% else %>
    <li ><%= link_to link.text, link.url %></li>

  <% end %>  
  <% if signed_in? %>
      <% if current_user?link.user || current_user.admin %>
          <%= link_to "delete", user_link_path(@user.id, link.id), method: :delete,
                  :remote => true,
                  data: { confirm: "you sure?" } %>
      <% end %>  
  <% end %>

<% end %>  