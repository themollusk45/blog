<style type="text/css">

    body{
      

        background-color:#E0E0E0;
        font:17px Arial, Helvetica, sans-serif ;
    }
</style>

<div class="row" style = "<%= show_blog_bg %>">
  <aside class="span2">
    <section>
      <p>left side stuff blah blah</p>
    </section>
  </aside>
  <div class="span6">
  	<section>

      <% if(@post.user.logo.url != "/logos/original/missing.png") %>
        <%=h image_tag @post.user.logo.url %>
      <% end %>
    	
      <%= @post.title %>
		<%= simple_format @post.content %>
		<% if (current_user?(@post.user)) || (current_user.admin)%>
			
      <%= link_to "edit post", edit_post_path(@post) %>
			<%= link_to "delete", @post, method: :delete,
										data: { confirm: "you sure?" },
										title: @post.title %>                  
		<% end %>
    </section>

    <h2>Comments</h2>
    <% @post.comments.each do |comment| %>
    	<p>
    		<strong>Commenter:</strong>
    		<%= comment.commenter %>
    	</p>

    	<p>
    		<strong>Comment:</strong>
    		<%= simple_format comment.body %>
    		<% if (current_user?(User.find_by_name(comment.commenter))&&signed_in?) || (current_user.name == @post.user.name) || current_user.admin %>
  				<%= link_to "edit comment", edit_post_comment_path(@post, comment) %> 
          <%= link_to "delete", post_comment_path(@post, comment), method: :delete %>
			<% end %>
    	</p>
    <% end %>

    <h2>Leave a comment:</h2>
    <%= form_for([@post, @post.comments.build]) do |f| %>
    	<% if signed_in? %>
			  <%= f.hidden_field :commenter, :value => current_user.name %>
    	<% else %>
    	  <p>
	    	<%= f.label :commenter %><br />
	    	<%= f.text_field :commenter %>
	      </p>
	    <% end %>
	    <p>
	    	<%= f.label :body %><br />
	    	<%= f.text_area :body %>
	    </p>
	    <p>
	    	<%= f.submit %>
	    </p>
	<% end %>
  </div>
  <aside class="span4 righthandside">
  	<p>right hand stuff</p>

    <!- LINKS< PUT IN PARTILAL LATER-->
    <section class="rhs_links">
      <ul>
        <% @user.links.each do |link| %>
          <li><%= link_to link.text, link.url %></li>
          <% if current_user?link.user || current_user.admin %>
            <%= link_to "delete", user_link_path(@post.user.id, link.id), method: :delete,
                                  :remote => true,
                                  data: { confirm: "you sure?" } %>
          <% end %>  
        <% end %>
      </ul>

<!- LIST OF OLDER POSTS, PUT IN PARTIAL LATER   -->

        <p>Older posts</p>
        <div id = "listContainer">
          <ul id="expList"><!- opening tag to go around all years ->
            
              <% curr_year = nil, curr_month = nil %>  
              <% @post.user.posts.each do |post| %>
                <% if (curr_year == nil) || (curr_year != post.created_at.year) %>
                  <% if (curr_year != nil) %>
                      </ul id="closemonthslist"><!- closing tag for months ->

                    </li id="close previous months li"><!- if it s not first yar, add close li tag ->
                    </ul>
                    </li>
                  <% end %>
                  <% curr_year = post.created_at.year %>
                  <% curr_month = nil %><!-reset to knil ->
                  <li> <%= curr_year %> 
                  <ul><!-opening tag for months in year ->
                <% end %>

                <% if (curr_month == nil) || (curr_month != post.created_at.month) %>
                  <% if curr_month == nil %>
                  <% else %>
                      </ul><!-close prev months post list ->
                    </li><!-closing li for previous month ->
                  <% end %>
                  <li>
                    <% curr_month = post.created_at.month %>
                    <%= post.created_at.strftime("%B") %><!- month name ->
                    <ul> <!-list of posts opening ->
                <% end %>
                      <li>
                        <%= link_to post.title, post_path(post) %>
                      </li>
              <% end %>
            
          </ul id="closeyearlist"><!- closing tag faround years ->
        </div>
    </section>
  </aside>
</div>  

