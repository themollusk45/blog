<% if signed_in? %>
	<div class="row">
	  <aside class="span4">
	    <section>
	      <%= render 'shared/user_info' %>
	    </section>
	    <section>
	    	<%= render 'shared/stats' %>
	    </section>
	  </aside>
	  <div class="span8">
	    <section id="post-form">
              <%= render 'shared/post_form' %>
	    </section>
	    <section>
		  <h3> Post Feed </h3>
		  <%= render 'shared/feed', collection: @recent_posts %>	
	    </section>
	  </div>
	</div>  
<% else %>
	<div class="center hero-unit">
		<h1> Welcome to Mugen Blog</h1>

		<h2>
			This is the homepage for Mugen Blogs (v.9), where you can create your own blog or view others.  Mugen is japanese for infinity and/or dreams, and also my pug.
			Many improvements on the way!
		</h2>
		
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("mugen.png", alt: "Mugen"), '#', {:id => 'mugenleft'} %>
	<%= link_to image_tag("mugenreverse.png", alt: "Mugen"), '#', {:id => 'mugenright'} %>
	<div class="row">
		<div class = "recent_posts span4">
			<h3> Recent posts </h3>
			<%= render 'shared/recent_post' %>
		</div>	
	</div>	
<% end %>
